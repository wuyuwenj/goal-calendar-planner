generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id                 String   @id @default(uuid())
  supabaseUserId     String   @unique @map("supabase_user_id")
  email              String
  googleRefreshToken String?  @map("google_refresh_token")
  timezone           String   @default("America/New_York")
  checkInDay         Int      @default(0) @map("check_in_day") // 0 = Sunday
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  goals        Goal[]
  availability Availability[]

  @@map("profiles")
}

model Goal {
  id           String    @id @default(uuid())
  profileId    String    @map("profile_id")
  title        String
  description  String?
  currentLevel String    @map("current_level") // beginner, some_experience, intermediate, advanced
  targetDate   DateTime  @map("target_date")
  calendarId   String?   @map("calendar_id") // Google Calendar ID
  status       String    @default("active") // active, completed, paused, abandoned
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  profile  Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  tasks    Task[]
  checkIns CheckIn[]

  @@map("goals")
}

model Availability {
  id        String @id @default(uuid())
  profileId String @map("profile_id")
  dayOfWeek Int    @map("day_of_week") // 0-6 (Sunday-Saturday)
  startTime String @map("start_time") // "09:00"
  endTime   String @map("end_time") // "17:00"

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("availability")
}

model Task {
  id              String   @id @default(uuid())
  goalId          String   @map("goal_id")
  title           String
  description     String?
  resourceUrl     String?  @map("resource_url") // Google search link for videos/articles
  scheduledDate   DateTime @map("scheduled_date")
  scheduledTime   String   @map("scheduled_time") // "14:00"
  durationMinutes Int      @map("duration_minutes")
  status          String   @default("pending") // pending, completed, missed, skipped
  googleEventId   String?  @map("google_event_id")
  weekNumber      Int      @map("week_number")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

model CheckIn {
  id             String   @id @default(uuid())
  goalId         String   @map("goal_id")
  weekNumber     Int      @map("week_number")
  completedTasks Int      @map("completed_tasks")
  totalTasks     Int      @map("total_tasks")
  notes          String?
  adjustments    String? // JSON string of what AI changed
  createdAt      DateTime @default(now()) @map("created_at")

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@map("check_ins")
}

model PendingGoal {
  id          String   @id @default(uuid())
  profileId   String   @map("profile_id")
  requestData String   @map("request_data") // JSON string of CreateGoalInput
  status      String   @default("pending") // pending, processing, completed, failed
  error       String?  // Error message if failed
  retryCount  Int      @default(0) @map("retry_count")
  goalId      String?  @map("goal_id") // Set when goal is successfully created
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("pending_goals")
}
